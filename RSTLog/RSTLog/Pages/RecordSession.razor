@page "/recordSession/{customerId:int}"


<h3>Record A Session</h3>

<EditForm EditContext="_editContext" OnValidSubmit="Create" class="card card-body bg-light mt-5">
    <div class="form-group row">
        <div class="col-md-10">
            <InputNumber id="id" @bind-Value="CustomerId" hidden="hidden" />
            @*<ValidationMessage For="@(() => _customer.Name)" />*@
        </div>
    </div>
    @*<DataAnnotationsValidator />*@
    <div class="form-group row">
        <label for="name" class="col-md-5 col-form-label">Transaction Type</label>
        <div class="col-md-10">
            <InputSelect id="TransType" class="form-control" @bind-Value="_audit.TransTypeId">
                @if (recordSessionList != null)
                {
                    @foreach (var ttype in recordSessionList)
                    {
                        <option value="@ttype.Id">@ttype.Trans_Type</option>
                    }
                }
            </InputSelect>
            @*<ValidationMessage For="@(() => _transType.Trans_Type)" />*@
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-md-5 col-form-label">Employee</label>
        <div class="col-md-10">
            <InputSelect id="Employee" class="form-control" @bind-Value="_audit.EmployeeId">
                @if (employeeList != null)
                {

                    @foreach (var emp in employeeList.OrderBy(e => e.Name))
                    {

                        <option value="@emp.Id">@emp.Name</option>
                    }
                }
            </InputSelect>
            @*<ValidationMessage For="@(() => _transType.Trans_Type)" />*@
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-md-5 col-form-label">Qty</label>
        <div class="col-md-10">
            <InputNumber id="qty" class="form-control" min="1" @bind-Value="_audit.Qty" />
            @*<ValidationMessage For="@(() => _customer.Name)" />*@
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-md-5 col-form-label">Comments</label>
        <div class="col-md-10">
            <InputText id="name" class="form-control" @bind-Value="_audit.Comments" />
            @*<ValidationMessage For="@(() => _audit.Qty)" />*@
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-md-5 col-form-label">Session Date</label>
        <div class="col-md-10">
            <InputDate id="name" class="form-control" @bind-Value="_audit.Date" />
            @*<ValidationMessage For="@(() => _audit.Qty)" />*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success" disabled="@formInvalid">Create</button>
        </div>
    </div>
</EditForm>

<div class="row">
    <div class="col">
        <a href="/customer/@Customer.Id" class="btn btn-success">Back</a>
    </div>
</div>
